---
import PageLayout from "../layouts/PageLayout.astro";
import GridProjects from "../components/projects/GridProjects.astro";
---

<PageLayout pageID="projects">
    <section class="section flow">
        <h2>Web Development</h2>
        <GridProjects collection="projectsWebDev" limit={6} />
        <p>
            <a href="/projects/web-dev">View all web development projects →</a>
        </p>
    </section>
    <section class="section flow">
        <h2>Assessment</h2>
        <GridProjects collection="projectsAssessment" limit={6} />
        <p>
            <a href="/projects/assessment">View all assessment projects →</a>
        </p>
    </section>
    <section class="section flow">
        <h2>Math Education</h2>
        <GridProjects collection="projectsMathEd" limit={6} />
        <p>
            <a href="/projects/math-ed">View all math education projects →</a>
        </p>
    </section>
    <section class="section flow">
        <h2>Creative Club</h2>
        <p>
            Each month my wife's family and I pick a theme and each make a
            creative project based on the theme. These are my submissions.
        </p>
        <GridProjects
            collection="projectsCreativeClub"
            layout="grid"
            limit={12}
        />
        <p>
            <a href="/projects/creative-club"
                >View all creative club projects →</a
            >
        </p>
    </section>
</PageLayout>

<style>
    h2 {
        padding-block-start: var(--space-l);
    }
</style>
