---
import BaseLayout from "../../layouts/BaseLayout.astro";

import { getCollection, render, type CollectionEntry } from "astro:content";
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
    const projects = await getCollection("projects");
    return projects.map((project: CollectionEntry<"projects">) => ({
        params: { id: project.id },
        props: { project },
    }));
}
// 2. For your template, you can get the entry directly from the prop
const { project }: { project: CollectionEntry<"projects"> } = Astro.props;
const { Content } = await render(project);
---

<BaseLayout title={project.data.title} description={project.data.description}>
    <h1>{project.data.title}</h1>
    <p>{project.data.description}</p>
    <p>
        posted {
            project.data.pubDate.toLocaleDateString("en-gb", {
                year: "numeric",
                month: "short",
                day: "numeric",
            })
        }
    </p>
    <hr />
    <Content />
</BaseLayout>
