---
import CardProject from "./CardProject.astro";
import { getCollection } from "astro:content";

interface Props {
    collection:
        | "projectsAssessment"
        | "projectsData"
        | "projectsMathEd"
        | "projectsWebDev"
        | "projectsCreativeClub";
    layout?: string;
    limit?: number;
}

const { collection, layout, limit } = Astro.props;

const allProjects = await getCollection(collection);

const sortedProjects = allProjects.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const displayedProjects = limit
    ? sortedProjects.slice(0, limit)
    : sortedProjects;

// Map collection names to URL paths
const collectionPaths: Record<typeof collection, string> = {
    projectsAssessment: "assessment",
    projectsData: "data",
    projectsMathEd: "math-ed",
    projectsWebDev: "web-dev",
    projectsCreativeClub: "creative-club",
};

const basePath = collectionPaths[collection];
---

<div class={layout}>
    {
        displayedProjects.map((project) => (
            <CardProject
                title={project.data.title}
                description={project.data.description}
                pubDate={project.data.pubDate}
                status={project.data.status}
                id={project.id}
                basePath={basePath}
                tags={project.data.tags}
            />
        ))
    }
</div>
