---
interface Props {
    title: string;
    description: string;
    pubDate: Date;
    id: string;
    tags?: string[];
}

const { title, description, pubDate, id, tags } = Astro.props;
---

<article class="card">
    <a href={`/projects/${id}`}>
        <p class="date">
            <em>
                {
                    pubDate.toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                    })
                }
            </em>
        </p>
        <h2 class="title">
            {title}
        </h2>
        <p class="description">
            {description}
        </p>
        {tags && <p class="tags">{tags}</p>}
    </a>
</article>

<style>
    .card {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-block: 1.5rem;
        background-color: var(--color-light);
        border: 1px solid var(--color-dark);
        filter: drop-shadow(0.5rem 0.5rem var(--color-dark));
        border-radius: 1.25rem;
        padding: 1.5rem;
        transition: filter 0.2s ease-in;
        width: 100%;
    }
    .card:hover {
        filter: drop-shadow(1rem 1rem);
        .title {
            color: var(--color-primary-shade);
        }
    }

    .title {
        color: var(--color-dark);
        transition: color 0.2s ease-in;
    }

    .date {
        font-size: var(--step--1);
    }

    a {
        text-decoration: none;
    }
</style>
